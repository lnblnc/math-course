
<div class="w-75 mx-auto">
<p class="fs-1">Register</p>
{{#if registerError}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong>Error!</strong> 
  <p>{{registerError}}</p>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
<form action="/register" method="post">
<div class="d-flex mb-3 gap-3"> 
<div class="form-floating mb-3">
  <input type="text" class="form-control" name="Lastname" id="floatingInput" placeholder="bobur">
  <label for="floatingInput">Lastname</label>
</div>
<div class="form-floating mb-3">
  <input type="text" class="form-control" name="Firstname" id="floatingInput" placeholder="bobur">
  <label for="floatingInput">Firstname</label>
</div>
</div>
  <div class="form-floating mb-3">
  <input type="email" class="form-control" name="email" id="floatingInput" placeholder="name@example.com">
  <label for="floatingInput">Email address</label>
</div>
<div class="form-floating">
  <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
  <label for="floatingPassword">Password</label>
</div>
  <button type="submit" class="btn btn-success m-3">Register</button>
</form>
</div>